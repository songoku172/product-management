extends ../../layouts/default.pug  
include ../../mixin/alert.pug  

block main 
    +alert-success(5000) 
    +alert-error(5000)
    
    .container.my-5 
        .row.justify-conten-center 
            .col-10
                h1(class="text-center") Lấy lại mật khẩu
                form(
                    action= "/user/password/forgot"
                    method="POST"
                )
                    div(class="form-group")
                        label(for="email") Email 
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            required
                        ) 
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Gửi email xác nhận